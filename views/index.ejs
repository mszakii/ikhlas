            <input
              type="text"
              name="name"
              id="name"
              placeholder="Name"
              required
              autocomplete="off"
            />
            <input
              type="mail"
              name="mail"
              id="mail"
              placeholder="Email"
              required
            />
            <input
              type="text"
              name="phone"
              id="phone"
              placeholder="WhatsApp number (optional)"
            />
            <textarea
              name="msg"
              id="msg"
              rows="10"
              required
              placeholder="For register or inquiries"
            ></textarea>
            <button class="btn btn-blue" id="submit">Send</button>
