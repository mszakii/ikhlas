    <section class="contact" id="contact">
      <div class="parent">
        <div class="left">
          <canvas id="canvas" width="400" height="400"></canvas>
        </div>
        <div class="right">
          <form class="form" method="post" action="/send">
            <!-- in back-end convert div to form but did not change the class -->
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Name"
              minlength="7"
              required
              autocomplete="off"
            />
            <input
              type="email"
              name="mail"
              id="mail"
              placeholder="Email"
              required
            />
            <input
              type="text"
              name="phone"
              id="phone"
              placeholder="WhatsApp number (optional)"
            />
            <textarea
              name="msg"
              id="msg"
              rows="10"
              minlength="25"
              required
              placeholder="For support or inquiries"
            ></textarea>
            <button class="btn btn-blue" id="submit">Send</button>
          </form>
        </div>
      </div>
    </section>
